// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "plugin.halbestunde",
  "asar": true,
  "asarUnpack": ["lib"],
  "productName": "Halbestunde",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    "lib",
    {
      "from": "lib",
      "to": "lib",
      "filter": ["**/*", "!**/node_gyp_bins/python3"]
    }
  ],
  "extraResources": [
    {
    "from": "lib",
      "to": "Contents/Frameworks/",
      "filter": ["**/*", "!**/*.ts", "!**/*.cpp", "!**/*.gyp", "!**/node_modules", "!**/node_gyp_bins/python3"]
     }
  ],
  "extraFiles": [
    {
      "from": "lib",
      "to": "lib",
      "filter": ["**/*", "!**/*.ts", "!**/*.cpp", "!**/*.gyp", "!**/node_modules", "!**/node_gyp_bins/python3"]
    }
  ],
  "mac": {
    "icon":"./public/icon.png",
    "category": "public.app-category.utilities",
    "forceCodeSigning": false,
    "target": [
      "dmg"
    ],
    "identity": "902E8E8B3A6FE1D1EF4729D19AACE0131FD573A3",
    "hardenedRuntime": true,
    "type": "distribution",
    "gatekeeperAssess": false,
    "entitlements": "./app-build/entitlements.mac.plist",
    "entitlementsInherit": "./app-build/entitlements.mac.plist",
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}",
    "notarize": false
  },
  "afterSign": "./afterSignHook.ts",
  "win": {
  "verifyUpdateCodeSignature":false,
  "icon":"./public/icon.png",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": false,
    "runAfterFinish": true,
    "deleteAppDataOnUninstall": true
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "artifactName": "${productName}-Linux-${version}.${ext}"
  },

}
